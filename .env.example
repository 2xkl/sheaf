# === Sheaf Configuration ===

# App
APP_NAME=sheaf
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=change-me-to-a-random-secret
DEBUG=false

# Database (PostgreSQL via docker-compose)
DATABASE_URL=postgresql+asyncpg://sheaf:sheaf@postgres:5432/sheaf
# For local dev without Docker: DATABASE_URL=sqlite+aiosqlite:///./sheaf.db

# Storage backend (global default, users can override in Settings)
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./storage

# Azure Blob Storage (global fallback for pre-migration documents)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=sheaf-pdfs

# Redis cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=3600

# Auth
ACCESS_TOKEN_EXPIRE_MINUTES=60
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# OCR (Tesseract)
OCR_ENABLED=true
OCR_LANGUAGE=eng+pol
OCR_TIMEOUT=300

# Calibre integration
CALIBRE_ENABLED=true
CALIBRE_LIBRARY_PATH=
CALIBRE_SERVER_URL=
CALIBRE_SERVER_USERNAME=
CALIBRE_SERVER_PASSWORD=
